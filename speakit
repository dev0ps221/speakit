#!/usr/bin/env python3

class ttsManager:
    "text to speak manager"
    lines = []
    text  = None
    def set_lines(self,lines):
        self.lines = lines

    def set_text(self,text=None):
        self.text = text  if text else ''.join(self.lines)
        
    def get_lines(self):
        return self.lines
        
    def get_text(self):
        return self.text

    def __init__(self,lines):
        self.set_lines(lines)
        self.set_text()

class ftsManager:
    "file to speak manager"

    file     = None
    filename = None
    text     = None

    def get_text(self):
        return self.text.get_text() if self.text else ""

    def get_lines(self):
        return self.text.get_lines() if self.text else []

    def read_file(self):
        self.file = fopen(self.filename,'r')
        if self.is_valid():
            self.text = ttsManager(self.file.readlines())
        self.file.close()

    def is_valid(self):
        return self.file.readable()

    def set_filename(self,filename):
        self.filename = filename
        
    def __init__(self,filename):
        self.set_filename(filename)
        self.read_file()

